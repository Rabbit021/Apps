<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" x:Class="AutoMapperTest.MainWindow"
        Title="MainWindow" Height="350" Width="525" WindowStartupLocation="Manual" Background="White" WindowStyle="ToolWindow">
    <Grid>
    	<Grid HorizontalAlignment="Left" Height="100" Margin="-0.986,0.81,0,0" VerticalAlignment="Top" Width="100">
    		<Image Source="{Binding CurrentWeather.WeatherImage}"/>
    		<TextBlock TextWrapping="Wrap" VerticalAlignment="Center" d:LayoutOverrides="Width" HorizontalAlignment="Center" Text="{Binding CurrentWeather.WeatherStr}"/>
    	</Grid>
    </Grid>
</Window>
